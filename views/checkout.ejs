    <section class="checkout-container">
        <!-- <form id="checkout">  -->
            <label for="name">Enter your name:</label>
            <input class="form-control" type="text" id="name" placeholder="name" style="width: 300px; margin: 1em">
            <label for="phone">Enter your phone number:</label>
            <!-- <input class="form-control" type="number" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="123-456-7890" style="width: 300px; margin: 1em" required> -->
