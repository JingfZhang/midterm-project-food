    <section class="confirm-container">
        <article class="article">
            <header class="header">
                <h3 class="text-center">Order Placed!</h3>
            </header>
            <div class="content text-center">
                <h4>Thank You!</h4>
                <h5>Your order will be ready in <strong>30 min</strong>.We will send your order detail via text message.</h5>
            </div>
        </article>
    </section>

